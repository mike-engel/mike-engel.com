%html{ lang: 'en' }
  %head
    - if @title
      %title #{@title} | Mike Engel
    - else
      %title Mike Engel
    %meta{ charset: 'utf-8' }

    %link{ :type => 'text/css', :rel => 'stylesheet', :href => '/css/normalize.min.css' }
    %link{ :type => 'text/css', :rel => 'stylesheet', :href => '/css/screen.css' }
    %link{ :rel => 'Shortcut Icon', :href => '/media/favicon.png' }

    %script{ :src => '/js/minified.min.js', :type => 'text/javascript' }
    :javascript
      var MINI = require('minified');
      var $ = MINI.$, $$ = MINI.$$, EE = MINI.EE;
    %script{ :src => "//cdnjs.cloudflare.com/ajax/libs/retina.js/1.0.1/retina.js", :type => "text/javascript" }
    %script{ :src => '//cdnjs.cloudflare.com/ajax/libs/parsley.js/1.1.16/parsley.min.js', :type => 'text/javascript' }
    %script{ :src => '/js/scripts.js', :type => 'text/javascript' }

    <!--[if lte IE 8]><script src="http://cdnjs.cloudflare.com/ajax/libs/respond.js/1.1.0/respond.min.js" type="text/javascript"></script><script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.2/html5shiv.js" type="text/javascript"></script><![endif]-->
  %body
    %header{ :class => 'site-header' }
      %div{ :class => 'container' }
        %a{ :class => 'logo-link', :href => '/' }
          %img{ :src => 'media/logo.png', :alt => 'mike engel design logo' }/
        %nav{ :class => 'site-nav' }
          %ul
            %li
              %a{ :class => ('current' if @section == 'blog'), :href => 'blog' } blog
            %li
              %a{ :class => ('current' if @section == 'work'), :href => 'work' } work
            %li
              %a{ :class => ('current' if @section == 'about'), :href => 'about' } about

    %div{ :class => 'content' }
      =styled_flash
      = yield