{
  "compilerOptions": {
    "outDir": "dist/",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "module": "esnext",
    "jsx": "preserve",
    "target": "es2017",
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types", "src/types"],
    "lib": ["es6", "es2016", "dom", "dom.iterable", "scripthost", "esnext.asynciterable"],
    "pretty": true
  }
}
